# TurfOps Environment Variables
# Copy this file to .env and fill in your values

# SoilData PostgreSQL Connection (NOAA USCRN data)
SOILDATA_DB_HOST=localhost
SOILDATA_DB_PORT=5432
SOILDATA_DB_NAME=uscrn
SOILDATA_DB_USER=postgres
SOILDATA_DB_PASSWORD=your_password_here

# Home Assistant REST API
HASS_URL=http://homeassistant.local:8123
HASS_TOKEN=your_long_lived_access_token_here

# OpenWeatherMap API (for 5-day forecast)
# Get a free API key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_api_key_here

# Your lawn location (for weather forecast)
# Find coordinates at: https://www.latlong.net/
LAWN_LATITUDE=39.8561
LAWN_LONGITUDE=-75.7872
