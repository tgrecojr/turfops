# TurfOps Configuration
#
# You can place secrets directly in this file, or use ${VAR} syntax
# to substitute environment variables (loaded from .env if present).
#
# To generate this file interactively, run: turfops init

# Default lawn profile (created on first run if not exists)
lawn:
  name: "Main Lawn"
  grass_type: "TallFescue"
  usda_zone: "7a"
  soil_type: "Loam"
  lawn_size_sqft: 5000.0
  irrigation_type: "InGround"

# NOAA station for soil data
noaa:
  station_wbanno: 3761  # PA Avondale

# SoilData PostgreSQL connection
soildata:
  host: "localhost"
  port: 5432
  database: "uscrn"
  user: "postgres"
  password: "your_password_here"

# Home Assistant API connection
homeassistant:
  url: "http://192.168.1.100:8123"
  token: "your_long_lived_access_token_here"
  temperature_entity: "sensor.temp_humidity_sensor_temperature"
  humidity_entity: "sensor.temp_humidity_sensor_humidity"
  temperature_unit: "fahrenheit"  # fahrenheit or celsius (sensor reading unit)

# OpenWeatherMap API (for 5-day forecast - enables forecast-based rules)
# Get a free API key at: https://openweathermap.org/api
openweathermap:
  api_key: "your_api_key_here"
  latitude: 39.83
  longitude: -75.87
  enabled: true
